# Dashboard Configuration
# Copy this file to .env and update with your credentials

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=weather:current

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=weather_forecast
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_TABLE=weather_predictions

# Dashboard Settings
DASHBOARD_REFRESH_SECONDS=10
DASHBOARD_PORT=8501
DEFAULT_CITY=New York
TEMP_UNIT=celsius

# Deployment
# When deploying, set these environment variables in your deployment platform
# Example for Streamlit Cloud: Set in app.streamlit.io settings
# Example for Docker: Pass via docker run -e or docker-compose.yml
