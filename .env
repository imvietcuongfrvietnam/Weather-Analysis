# ===============================================================
# üöÄ KAFKA CONFIGURATION
# ===============================================================
# Local: localhost:9094 | K8s: weather-kafka:9092
KAFKA_BOOTSTRAP_SERVERS=weather-kafka:9092
KAFKA_TOPIC_WEATHER=weather
KAFKA_GROUP_ID=spark-weather-consumer-group-v1
KAFKA_STARTING_OFFSET=earliest

# ===============================================================
# üì¶ MINIO CONFIGURATION
# ===============================================================
# Local: localhost:9000 | K8s: weather-minio:9000
MINIO_ENDPOINT=weather-minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password123
MINIO_BUCKET=weather-data
MINIO_SECURE=False

# ===============================================================
# üêò POSTGRESQL CONFIGURATION (Data Warehouse)
# ===============================================================
# Local: localhost:5432 | K8s: weather-postgresql:5432
POSTGRES_HOST=weather-postgresql
POSTGRES_PORT=5432
POSTGRES_DB=weather_db
POSTGRES_USER=weather_user
POSTGRES_PASSWORD=weather_pass
POSTGRES_TABLE=weather_predictions

# ===============================================================
# üî• REDIS CONFIGURATION (Real-time Cache)
# ===============================================================
# Local: localhost | K8s: weather-redis
REDIS_HOST=weather-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_KEY_PREFIX=weather:current
REDIS_TTL=3600

# ===============================================================
# üíª DASHBOARD & SYSTEM SETTINGS
# ===============================================================
DASHBOARD_REFRESH_SECONDS=10
DASHBOARD_PORT=8501
DEFAULT_CITY=New York
TEMP_UNIT=celsius